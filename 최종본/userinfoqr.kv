#:import Factory kivy.factory.Factory





BoxLayout:
    orientation: 'vertical'
    Upper_bar:
        size_hint: (1, 0.1)
        canvas.before:
            Color:
                rgba: 0, 1, 0, 0.7

            Rectangle:
                pos: self.pos
                size: self.size

    ContentArea:
        canvas.before:
            Color:
                rgba: 0.5, 0.5, 0.5, 1

            Rectangle:
                pos: self.pos
                size: self.size

        text: 'Hello world.'
    

<Upper_bar>:
    BoxLayout:

    Button:
        size_hint: (0.3, 1)
        text: '도움'
        font_name : 'NanumGothicBold.ttf'
        on_press: Factory.HelpPop().open()
        id: 'Help'
        

    Button:
        size_hint: (0.3, 1)
        text: '정보'
        font_name : 'NanumGothicBold.ttf'

        on_press: Factory.AboutPop().open()
        id: 'about'

<ContentArea>:
    orientation: 'vertical'
    name_text_input: name
    age_text_input: age
    symptom_text_input: symptom

    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, 0.5)
        Label:
            size_hint: (0.2, 1)
            text: '이름:'
            font_name : 'NanumGothicBold.ttf'


        TextInput:
            hint_text: '사용자의 이름을 입력해 주세요'
            font_name : 'NanumGothicBold.ttf'
            id: name
            pos: 760,400
            size: 100, 30

    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, 0.5)
        Label:
            size_hint: (0.2, 1)
            text: '나이:'
            font_name : 'NanumGothicBold.ttf'

        TextInput:
            hint_text: '사용자의 나이를 입력해 주세요'
            font_name : 'NanumGothicBold.ttf'
            id: age
    
    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, 0.5)
        Label:
            size_hint: (0.2, 1)
            text: '특이사항:'
            font_name : 'NanumGothicBold.ttf'

        TextInput:
            hint_text: '사용자의 특이사항을 입력해 주세요'
            font_name : 'NanumGothicBold.ttf'
            id: symptom



    BoxLayout:
        orientation: 'horizontal'
        Button:
            size_hint: (0.1, 0.3)
            text: '저장'
            font_name : 'NanumGothicBold.ttf'
            on_press: 
                root.submit_surname()
                Factory.SavePop().open()

        Button:
            size_hint: (0.1, 0.3)
            text: '전송'
            font_name : 'NanumGothicBold.ttf'
            on_press: 
                Factory.SendPop().open()



<HelpPop@Popup>:
    size_hint: 0.5, 0.5
    title: 'Help'
    auto_dismiss: False
    BoxLayout:
        orientation: 'vertical'
        Label:
            text:
                '''이 앱은 사용자의 정보를 QR코드로 변환해
                단말기로 전송해주는 프로그램입니다
                
                사용자의 정보를 입력한 뒤 저장버튼을 누르고
                전송버튼을 눌러주세요'''
            font_name : 'NanumGothicBold.ttf'

        Button:
            text:
                '닫기'
            font_name : 'NanumGothicBold.ttf'

            on_press:
                root.dismiss()

            size_hint_y: None
            height: '40dp'

<AboutPop@Popup>:
    size_hint: 0.5, 0.5
    title: 'About'
    auto_dismiss: False
    BoxLayout:
        orientation: 'vertical'
        Label:
            text:
                '''Made by Bumjun.
                Version: 0.1'''

        Button:
            text:
                'Close'

            on_press:
                root.dismiss()

            size_hint_y: None
            height: '40dp'


<SavePop@Popup>:
    size_hint: 0.5, 0.5
    title: 'Save'
    auto_dismiss: False
    BoxLayout:
        orientation: 'vertical'
        Label:
            text:
                '''저장되었습니다'''
            font_name : 'NanumGothicBold.ttf'

        Button:
            text:
                '닫기'
            font_name : 'NanumGothicBold.ttf'
            
            on_press:
                root.dismiss()

            size_hint_y: None
            height: '40dp'


<SendPop@Popup>:
    size_hint: 0.5, 0.5
    title: 'Send'
    auto_dismiss: False
    BoxLayout:
        orientation: 'vertical'
        Label:
            text:
                '''전송되었습니다'''
            font_name : 'NanumGothicBold.ttf'

        Button:
            text:
                '닫기'
            font_name : 'NanumGothicBold.ttf'
            
            on_press:
                root.dismiss()

            size_hint_y: None
            height: '40dp'
